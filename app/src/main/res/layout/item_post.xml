<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:elevation="4dp"
    android:backgroundTint="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Post Title -->
        <TextView
            android:id="@+id/postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <!-- Post Program -->
        <TextView
            android:id="@+id/postProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSIT"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_below="@id/postTitle"
            android:layout_marginTop="2dp" />

        <!-- Post Description -->
        <TextView
            android:id="@+id/postDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post content here..."
            android:layout_below="@id/postProgram"
            android:layout_marginTop="8dp"
            android:textColor="#444444" />

        <!-- Author and Timestamp -->
        <TextView
            android:id="@+id/postAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postDescription"
            android:layout_marginTop="12dp"
            android:text="Posted by Jane Doe Â· 2h ago"
            android:textSize="12sp"
            android:textColor="#888888" />

        <!-- Overflow Menu (Visible only for the author) -->
        <ImageButton
            android:id="@+id/postMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/postAuthor"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Post Menu"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>