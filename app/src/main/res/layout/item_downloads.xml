<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- File Icon -->
        <ImageView
            android:id="@+id/downloadFileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_file"
            android:contentDescription="File Type Icon"
            android:layout_marginEnd="12dp" />

        <!-- File Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/downloadFileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/downloadFileCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/downloadSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 MB"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />

            <TextView
                android:id="@+id/downloadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 30, 2025"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />
        </LinearLayout>

        <!-- Offline Badge -->
        <TextView
            android:id="@+id/downloadOfflineBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:textSize="12sp"
            android:padding="6dp"
            android:textColor="#388E3C"
            android:background="#E8F5E9"
            android:layout_marginStart="6dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
