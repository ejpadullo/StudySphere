<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#03A9F4">


    <ImageView
        android:id="@+id/StudySphere"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/studysphere"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_guest_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're browsing as a guest"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login or create an account to unlock features."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#00358E"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#03A9F4"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/rounded_corner"
        android:padding="12dp" />

</LinearLayout>
